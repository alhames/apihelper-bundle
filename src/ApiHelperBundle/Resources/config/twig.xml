<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="apihelper.twig.extension.class">ApiHelperBundle\Twig\Extension\ApiHelperExtension</parameter>
    </parameters>

    <services>
        <service id="apihelper.twig.extension" class="%apihelper.twig.extension.class%" public="false">
            <argument type="service" id="apihelper.captcha.manager"/>
            <argument type="service" id="request_stack"/>
            <tag name="twig.extension" />
        </service>
    </services>
</container>
